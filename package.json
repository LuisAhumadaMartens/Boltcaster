{
	"name": "boltcaster",
	"description": "A portfolio and blog theme  made by Luis Ahumada.",
	"version": "0.0.2",
	"license": "UNLICENSED",
	"author": {
		"name": "Luis Ahumada",
		"email": "luis@ahumada.dev",
		"url": "https://ahumada.dev"
	},
	"keywords": [
		"Boltcaster",
		"Luis Ahumada",
		"ghost",
		"ghost-theme"
	],
	"scripts": {
		"start": "postcss ./assets/css/tailwind.css -o ./assets/build/tailwind.css --minify --watch",
		"tailwind": "tailwindcss  -i ./assets/css/tailwind.css -o ./assets/build/tailwind.css --minify",
		"build": "gulp",
		"demo": "echo \"for Vercel static deployment\" && exit 0",
		"dev": "gulp",
		"test": "gscan .",
		"zip": "gulp zip"
	},
	"screenshots": {
		"desktop": ""
	},
	"config": {
		"image_sizes": {
			"xxs": {
				"width": 30
			},
			"xs": {
				"width": 100
			},
			"s": {
				"width": 300
			},
			"m": {
				"width": 600
			},
			"l": {
				"width": 1000
			},
			"xl": {
				"width": 2000
			}
		},
		"posts_per_page": 10,
		"card_assets": true,
		"custom": {
			"background_color": {
				"type": "color",
				"default": "#191919"
			},
			"body_color": {
				"type": "color",
				"default": "#FDFDFD"
			},
			"heading_color": {
				"type": "color",
				"default": "#121519"
			},
			"second_accent_color": {
				"type": "color",
				"default": "#E90C64"
			},
			"body_font": {
				"type": "select",
				"options": [
					"Modern sans-serif",
					"Elegant serif"
				],
				"default": "Modern sans-serif"
			},
			"title_font": {
				"type": "select",
				"options": [
					"Modern sans-serif",
					"Elegant serif"
				],
				"default": "Modern sans-serif"
			},
			"first_navigation_tag": {
				"type": "text",
				"default": "projects"
			},
			"main_title_home": {
				"type": "text",
				"default": "Hello world!",
				"group": "homepage"
			},
			"subtitle_home": {
				"type": "text",
				"default": "Mattis aliquet faucibus senectus feugiat sapien mi diam nibh velit nunc purus elementum faucibus lectuset mauris.",
				"group": "homepage"
			},
			"top_subtitle_home": {
				"type": "text",
				"default": "Lorem Ipsum.",
				"group": "homepage"
			}
		}
	},
	"devDependencies": {
		"@babel/core": "^7.21.0",
		"@babel/preset-env": "^7.20.2",
		"@tryghost/shared-theme-assets": "2.3.2",
		"autoprefixer": "^10.4.16",
		"beeper": "2.1.0",
		"browser-sync": "^2.28.3",
		"cssnano": "6.0.1",
		"del": "^6.1.1",
		"gscan": "4.37.1",
		"gulp": "^4.0.2",
		"gulp-autoprefixer": "^8.0.0",
		"gulp-babel": "^8.0.0",
		"gulp-concat": "2.6.1",
		"gulp-livereload": "4.0.2",
		"gulp-postcss": "9.0.1",
		"gulp-rename": "^2.0.0",
		"gulp-rollup": "^2.17.0",
		"gulp-sass": "^5.1.0",
		"gulp-sourcemaps": "^3.0.0",
		"gulp-uglify": "^3.0.2",
		"gulp-zip": "5.1.0",
		"postcss": "^8.4.30",
		"postcss-easy-import": "4.0.0",
		"pump": "3.0.0",
		"sass": "^1.58.3"
	},
	"dependencies": {
		"@lottiefiles/lottie-player": "^1.7.1",
		"jquery": "^3.6.0",
		"autoprefixer": "^10.4.16",
		"bootstrap": "^5.2.3",
		"boxicons": "^2.1.4",
		"cleave.js": "^1.6.0",
		"handlebars": "^4.7.7",
		"imagesloaded": "^5.0.0",
		"img-comparison-slider": "^8.0.0",
		"jarallax": "^2.1.3",
		"lightgallery": "^2.7.1",
		"nouislider": "^15.7.0",
		"parallax-js": "^3.1.0",
		"postcss": "^8.4.30",
		"postcss-cli": "^10.1.0",
		"prismjs": "^1.29.0",
		"rellax": "^1.12.1",
		"shufflejs": "^6.1.0",
		"smooth-scroll": "^16.1.3",
		"swiper": "^8.4.7",
		"tailwindcss": "^3.3.3",
		"vanilla-tilt": "^1.8.0"
	}
}
