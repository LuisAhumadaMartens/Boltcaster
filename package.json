{
	"name": "Boltcaster",
	"description": "A portfolio and blog theme  made by Luis Ahumada.",
	"version": "0.0.1",
	"license": "UNLICENSED",
	"author": {
		"name": "Luis Ahumada",
		"email": "luis@ahumada.dev",
		"url": "https://ahumada.dev"
	},
	"keywords": [
		"Boltcaster",
		"Luis Ahumada",
		"ghost",
		"ghost-theme"
	],
	"scripts": {
		"start": "postcss ./assets/css/tailwind.css -o ./assets/build/tailwind.css --minify --watch",
		"tailwind": "tailwindcss  -i ./assets/css/tailwind.css -o ./assets/build/tailwind.css --minify"
	},
	"screenshots": {
		"desktop": "assets/hello-world-thumb.png"
	},
	"config": {
		"image_sizes": {
			"xxs": {
				"width": 30
			},
			"xs": {
				"width": 100
			},
			"s": {
				"width": 300
			},
			"m": {
				"width": 600
			},
			"l": {
				"width": 1000
			},
			"xl": {
				"width": 2000
			}
		},
		"posts_per_page": 10,
		"card_assets": true
	},
	"dependencies": {
		"autoprefixer": "^10.4.16",
		"postcss": "^8.4.30",
		"postcss-cli": "^10.1.0",
		"tailwindcss": "^3.3.3"
	}
}
